@model IEnumerable<MacroTracker.Models.MealIntakeListItem>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<h2>Index</h2>

<div class="mealintakeindex">

    <p>
        <a class="btn btn-default" href="/MealIntake/Create">Create Intake &raquo;</a>
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MealPlanId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meal)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MealPlanId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meal)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MealIntakeId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MealIntakeId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MealIntakeId })
                </td>
            </tr>
        }

    </table>
    </div>
    @section Scripts{

        <script type="text/javascript" src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" />
        <script>
            $(document).ready(function () {
                $('#mealTbl').DataTable({
                    "paging": true,
                    "searching": true,
                    "ordering": true,
                });
            })
        </script>
    }

    <style>
        td input {
            opacity: .8;
        }

        .btn {
            background-image: url(../../Content/images/marbel.jpg);
            color: black;
        }

        .mealintakeindex {
            background-color: white;
            border-radius: 15px 15px 15px 15px;
        }
    </style>
